<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.scss" />
    <link rel="stylesheet" href="/css/product.scss" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>Document</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Orchids</a>
        <a href="/upload">Update Orchids</a>
    </div>

    <% arrOrchids.forEach(function(orchid, index) { %>
        <div class="container">
            <div>
                <div class="images" style="background-image: url(<%= orchid.image %>);">
                </div>
                <div>
                    <p class="pick-color">Available Colors:
                    </p>
                    <div class="colors">
                        <span style="color: <%= orchid.color %>;" class="material-symbols-outlined">
                            radio_button_checked
                        </span>
                    </div>
                </div>
            </div>
            <div>
                <h2>
                    <%= orchid.name %> <br>
                        <span>Orchid Collection</span>
                </h2>

                <h3>$<%= orchid.price %>
                </h3>
                <button>Buy Now</button>
            </div>

        </div>
        <% }) %>
</body>

</html>